# Example local environment for mai-sale
# Copy to .env.local and adjust as needed

# Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_GENERATE_URL=${OLLAMA_BASE_URL}/api/generate
OLLAMA_EMBEDDING_URL=${OLLAMA_BASE_URL}/api/embeddings
EMBEDDING_MODEL=bge-m3

# ChromaDB (PersistentClient)
CHROMA_PATH=./database/chroma_db
CHROMA_COLLECTION=conversations_dev

# Backend
DATABASE_URL=sqlite+aiosqlite:///./database/sqlite.db
X_API_KEYS=default-dev-key
REDIS_URL=

# Persona & intent (optional)
PERSONA_PATH=./prompts/system_persona_vi.md
PERSONA_MAX_CHARS=4000
INTENT_CONFIDENCE_THRESHOLD=0.5